<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    android:orientation="vertical">


    <ru.katso.livebutton.LiveButton
        android:id="@+id/resBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:enabled="false"
        android:gravity="center"
        android:text="Начать с начала"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:backgroundColor="#D81B60"
        app:corners="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_res"
        app:normalHeight="10dp"
        app:pressedHeight="3dp"
        app:shadowColor="#969696" />

    <TextView
        android:id="@+id/cal_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Вам подходит"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_res"
        android:layout_width="0dp"
        android:layout_height="470dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_quiz" />


</androidx.constraintlayout.widget.ConstraintLayout>